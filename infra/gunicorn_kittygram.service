[Unit]
Description=gunicorn daemon for Kittygram
After=network.target

[Service]
User=yc-user
WorkingDirectory=/home/yc-user/kittygram/backend
EnvironmentFile=/home/yc-user/kittygram/backend/.env
ExecStart=/home/yc-user/kittygram/backend/venv/bin/gunicorn \
  --bind 127.0.0.1:8080 kittygram_backend.wsgi:application

[Install]
WantedBy=multi-user.target

